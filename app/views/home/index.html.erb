
<h1>지우의 일기장</h1>
<table class="table">
    <thead>
        <th>작성날짜</th>
        <th>제    목</th>
        <th>내    용</th>
        <th></th>
    </thead>
    <tbody>
        <% @memo.each do |t| %>
            <tr>
            <td><%= t.created_at.strftime("%Y/%m/%d") %></td>
            <td><%= t.title %></td>
            <td><%= t.content %></td>
            <td><a href="/home/read/<%= t.id%>"><button class="btn btn-danger">GO</button></a></td>
            </tr>
        <% end %>
    </tbody>
</table>



<div style="text-align:center;">
