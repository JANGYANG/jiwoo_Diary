<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
            <h1 class="center">지우의 일기장</h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        
<table class="table table-hover">
    <thead>
        <th>DATE</th>
        <th>TITLE</th>
        <th>MEMO</th>
        <th></th>
    </thead>
    <tbody>
        <% @memo.each do |t| %>
            <tr>
            <td><%= t.created_at.strftime("%Y/%m/%d") %></td>
            <td><%= t.title %></td>
            <td><%= t.content %></td>
            <td><a href="/home/read/<%= t.id%>"><button class="btn btn-danger">GO</button></a></td>
            </tr>
        <% end %>
    </tbody>
</table>

    </div>
</div>


<div style="text-align:center;">
<a href="/home/new"><button class="btn btn-primary">새 메모</button></a>


