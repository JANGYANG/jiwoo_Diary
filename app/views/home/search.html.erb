<div class="container">
    <div class="row center">
        <h1>검색결과는 <%=@memo.count%>개 입니다.</h1>
    </div>

    <div class="row center">
        <table class="table table-hover">
            <thead>
                <th>No.</th>
                <th>TITLE</th>
                <th>CONTENT</th>
                <th>DATE</th>
                <th></th>
            </thead>
            <tbody>
                <% num=0 %>
                <% @memo.each do |t, index| %>
                <tr>
                    <td><b><%= num += 1  %></b></td>
                    <td><%= t.title %></td>
                    <td><%= t.content%></td>
                    <td><%= t.created_at.strftime("%Y.%m.%d")%></td>
                    <td><a href="/home/read/<%=t.id%>"><button class="btn btn-danger">GO</button></a></td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>
<a href="index"><button class="btn btn-primary">처음으로</button></a>

</div>