
<h1>검색결과는 <%=@memo.count%>개 입니다.</h1>

    <table>
        <thead>
            <th>No.</th>
            <th>제목</th>
            <th>내용</th>
            <th>작성날짜</th>
            <th></th>
        </thead>
        <tbody>
            <% num=0 %>
            <% @memo.each do |t| %>
            <tr>
                <td><%= num += 1 %>번째</td>
                <td><%= t.title %></td>
                <td><%= t.content%></td>
                <td><%= t.created_at.strftime("%Y.%m.%d")%></td>
                <td><a href="/home/read/<%=t.id%>"><button>GO</button></a></td>
            </tr>
            <% end %>
        </tbody>
    </table>

<a href="index"><button>처음으로</button></a>